<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="greenText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:background">@color/othererGreen</item>
        <item name="android:colorAccent">@color/otherGreen</item>
        <item name="android:fontFamily">ComicSans</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="blueSwitch">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>
    
    <style name="importantCheckbox">
        <item name="android:background">@color/otherGreen</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>
</resources>